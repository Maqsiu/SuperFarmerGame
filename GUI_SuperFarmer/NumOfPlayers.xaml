        xmlns:local="clr-namespace:GUI_SuperFarmer"
        mc:Ignorable="d"
                >
    <Grid>
        <Image Source="StartWindowImg.jpg"  Stretch="UniformToFill"/>
        <Label Content="Choose a number&#xD;&#xA;      of players:" Panel.ZIndex="2" Margin="0,88,0,585" FontSize="24" FontWeight="Bold" FontFamily="Cooper Black" HorizontalAlignment="Center" RenderTransformOrigin="0.448,0.664"/>

        <Button Content="2 players" Panel.ZIndex="2" x:Name="Confirm_btn" Margin ="218,209,219,496" Click="Players2_btn_Click" Background="#00A28C8C" FontSize="36" FontFamily="Cooper Black" RenderTransformOrigin="0.477,0.693"/>
        <Label Content="" Panel.ZIndex="0" x:Name="Label3" HorizontalAlignment="Center" Height="550" Margin="0,63,0,0" VerticalAlignment="Top" Width="400" Foreground="Black">
            <Label.Background>
                <ImageBrush ImageSource="PlayerBoard.png"/>
            </Label.Background>
        </Label>
        <ContentControl x:Name="MyContentControl2">
            <Button Content="4 players" Panel.ZIndex="2" x:Name="Confirm_btn_Kopiuj1" Margin ="218,353,219,353" Click="Players4_btn_Click" FontSize="36" FontFamily="Cooper Black" RenderTransformOrigin="0.48,1.327" Background="#19964A4A"/>
        </ContentControl>
        <Button Content="3 players" Panel.ZIndex="2" x:Name="Confirm_btn_Kopiuj4" Margin ="218,287,219,419" Click="Players3_btn_Click" Background="#00A28C8C" FontSize="36" FontFamily="Cooper Black" RenderTransformOrigin="0.48,1.327"/>


    </Grid>
</UserControl>
